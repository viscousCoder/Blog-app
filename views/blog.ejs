<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/heads") %>
        <title>Blog</title>
</head>

<body>
    <%- include("./partials/navbar") %>

        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImageURL %>" width="700px">
            <p>
                <%= blog.body %>
            </p>
        </div>

        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImage %>" width="60px" />
            <%= blog.createdBy.fullName %>
        </div>

        <div class="container mt-3">
            <h1>Comments (<%= comments.length %>)</h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">

                    <div class="mb-3 mt-5">

                        <input type="text" class="form-control" name="content" placeholder="Enter your comment"
                            aria-describedby="emailHelp">

                    </div>


                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
                <% } %>
        </div>

        <div class="container mt-3">
            <% comments.forEach(comment=> { %>
                <img src="<%= blog.createdBy.profileImage %>" width="40px" />
                <%= blog.createdBy.fullName %>
                    <pre><%= comment.content %></pre>
                    <% }) %>
        </div>
        <%- include("./partials/scripts") %>
</body>

</html>